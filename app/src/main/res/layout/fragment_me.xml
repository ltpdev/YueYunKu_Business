<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/bg_fragment"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar"></include>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/linearLayout_login"
        android:background="@drawable/bg_layout_selector"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_user_head"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/content_head"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <LinearLayout
            android:clickable="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_name_user"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_phone_user"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout_vendor_name"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_layout_selector"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:drawablePadding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:drawableLeft="@mipmap/bus_name_icon"
            android:text="场馆名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_name_vendor"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:background="#33000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:id="@+id/linearLayout_address_place"
        android:clickable="true"
        android:background="@drawable/bg_layout_selector"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:drawablePadding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:drawableLeft="@mipmap/address_icon"
            android:text="场馆地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_address_place"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:background="#33000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:id="@+id/linearLayout_comment_place"
        android:clickable="true"
        android:background="@drawable/bg_layout_selector"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:drawablePadding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:drawableLeft="@mipmap/comment"
            android:text="场馆评论"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:background="#33000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:id="@+id/linearLayout_info_place"
        android:clickable="true"
        android:background="@drawable/bg_layout_selector"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/icon_business_backgroud"
            android:text="场地信息设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout_logout"
        android:clickable="true"
        android:background="@drawable/bg_layout_selector"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:drawableLeft="@mipmap/logout"
            android:drawablePadding="12dp"
            android:text="退出登录"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
