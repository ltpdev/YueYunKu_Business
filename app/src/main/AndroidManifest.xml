<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gdcp.yueyunku_business">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:name=".app.App"
        android:icon="@mipmap/logo2"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="" />
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:label="" />
        <activity
            android:name=".ui.activity.SendActivity"
            android:label="" />
        <activity
            android:name="me.iwf.photopicker.PhotoPickerActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="me.iwf.photopicker.PhotoPagerActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.activity.UpdateVendorNameActivity"
            android:label="" />
        <activity
            android:name=".ui.activity.UpdateUserNameActivity"
            android:label="" />
        <activity
            android:name=".ui.activity.UpdatePhoneActivity"
            android:label="" />
        <activity
            android:name=".ui.activity.UpdatePlaceAddressActivity"
            android:label="" />
        <activity android:name=".ui.activity.ChooseAreaActivity" />
        <activity
            android:name=".ui.activity.UpdatePlaceInfoActivity"
            android:label="" />
        <activity
            android:name=".ui.activity.DetailActivity"
            android:label="" />
        <activity
            android:name=".ui.activity.HadOverActivity"
            android:label=""></activity>
        <activity
            android:name=".ui.activity.NoDoActivity"
            android:label="" />
        <activity android:name=".ui.activity.SportActivity" android:label=""></activity>
        <activity android:name=".ui.activity.DoingActivity" android:label=""></activity>
    </application>

</manifest>